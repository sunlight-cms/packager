#!/usr/bin/env php
<?php

namespace Sunlight\Packager;

require __DIR__ . '/../vendor/autoload.php';

set_exception_handler(function (\Throwable $e) {
    fwrite(
        STDERR,
        <<<ERR
ERROR: {$e->getMessage()}

{$e->getFile()}#{$e->getLine()}

{$e->getTraceAsString()}

ERR
    );

    exit(1);
});

exit((new Cli())->run());
